<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.school.tyari"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.app.appname.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@id/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".TermsActivity"></activity>
        <activity android:name=".FullImageView"/>
        <activity android:name=".PrivacyPolicyActivity" />
        <activity android:name=".others.CallActivity" />
        <activity android:name=".others.ArtCraftActivity" />
        <activity android:name=".others.BlogReviewsActivity" />
        <activity android:name=".others.BlogActivity" />
        <activity android:name=".others.TutorActivity" />
        <activity android:name=".NotificationShowActivity" />
        <activity android:name=".others.AdmissionActivity" />
        <activity android:name=".others.ConveyanceActivity" />
        <activity android:name=".others.SchoolDetailsActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.SettingsActivity" />
        <activity android:name=".activities.OrderDetailsSellerActivity" />
        <activity android:name=".activities.ShopReviewsActivity" />
        <activity android:name=".activities.WriteReviewActivity" />
        <activity android:name=".activities.OrderDetailsUsersActivity" />
        <activity
            android:name=".activities.ShopDetailsActivity"
            android:windowSoftInputMode="stateHidden" /> <!-- hide keyboard by default -->
        <activity android:name=".activities.EditProductActivity" />
        <activity android:name=".activities.AddProductActivity" />
        <activity android:name=".activities.ProfileEditSellerActivity" />
        <activity android:name=".activities.ProfileEditUserActivity" />
        <activity android:name=".activities.MainUserActivity" />
        <activity android:name=".activities.MainSellerActivity" />
        <activity android:name=".activities.ForgotPasswordActivity" />
        <activity android:name=".activities.RegisterUserActivity" />
        <activity android:name=".activities.RegisterSellerActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" /> <!-- register service to allow to run in background -->
        <service android:name=".MyFirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>