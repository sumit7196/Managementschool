<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_splash"
    tools:context="com.school.tyari.activities.SplashActivity">




    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/scoologo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:lottie_fileName="scoologo.json"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        app:lottie_loop="true" />


    <TextView
        android:id="@+id/schoolTv"
        android:layout_below="@+id/scoologo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="45sp"
        android:textStyle="bold"
        android:fontFamily="@font/muli_black"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorWhite"
        />



</RelativeLayout>