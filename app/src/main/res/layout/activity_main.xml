<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:background="@drawable/splash_color"
    tools:context="com.school.tyari.activities.MainActivity">


    <!--drawer-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity ="start"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_constraints"
        android:background="@android:color/white"

        >


        <!--Category Ui-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbars"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            app:buttonGravity="center_vertical"

            android:layout_margin="5dp"
            android:background="@drawable/shape_rect01"
            android:theme="?attr/actionBarSplitStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_menu">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/toolbars"
                android:fontFamily="@font/muli_black"
                android:gravity="center"
                android:text="SchoolTyari"
                android:textColor="@android:color/white"
                android:textSize="45sp" />



        </androidx.appcompat.widget.Toolbar>

        <!--Simple value: Show Category-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbars"
            android:background="@android:color/holo_green_light"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#FFFFFF"
                >

                <HorizontalScrollView
                    android:id="@+id/horizontalSv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal"
                    android:layout_below="@id/toolbars"
                    android:background="@android:color/white"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@drawable/shape_rect09"
                        android:orientation="horizontal">


                        <com.makeramen.roundedimageview.RoundedImageView
                            android:src="@drawable/s2"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            app:riv_corner_radius="20dp"
                            android:padding="10dp"
                            />
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:src="@drawable/s1"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            app:riv_corner_radius="20dp"
                            android:padding="10dp"
                            />
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:src="@drawable/s3"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            app:riv_corner_radius="20dp"
                            android:padding="10dp"
                            />
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:src="@drawable/s4"
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            app:riv_corner_radius="20dp"
                            android:padding="10dp"
                            />

                    </LinearLayout>


                </HorizontalScrollView>


                <LinearLayout
                    android:id="@+id/AdmissionCv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_dashboardgrid_01"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admission"
                        android:textSize="30sp"
                        android:fontFamily="@font/muli_black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30sp"
                        android:textColor="@android:color/black"
                        />


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentEnd="true"
                        android:padding="15dp"
                        android:background="@drawable/shape_circle03"
                        android:src="@drawable/school" />

                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/BookCv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_dashboardgrid_02">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Books"
                        android:textSize="30sp"
                        android:fontFamily="@font/muli_black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30sp"
                        android:textColor="@android:color/black"
                        />


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape_circle03"
                        android:padding="15dp"
                        android:src="@drawable/book" />



                    </RelativeLayout>








                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tutorCv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_dashboardgrid_03"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tutor"
                        android:textSize="30sp"
                        android:fontFamily="@font/muli_black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30sp"
                        android:textColor="@android:color/black"
                        />


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape_circle03"
                        android:padding="15dp"
                        android:src="@drawable/teacher" />

                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/conveyanceCv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_dashboardgrid_01"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Conveyance"
                        android:textSize="30sp"
                        android:fontFamily="@font/muli_black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30sp"
                        android:textColor="@android:color/black"
                        />


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape_circle03"
                        android:padding="15dp"
                        android:src="@drawable/conveyance" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/BlogCv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_dashboardgrid_02"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tutor"
                        android:textSize="30sp"
                        android:fontFamily="@font/muli_black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30sp"
                        android:textColor="@android:color/black"
                        />


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                       android:layout_margin="10dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape_circle03"
                        android:padding="15dp"
                        android:src="@drawable/blog" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    android:background="@drawable/shape_dashboardgrid_03"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:textSize="30sp"
                        android:fontFamily="@font/muli_black"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30sp"
                        android:textColor="@android:color/black"
                        />


                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/shape_circle03"
                        android:padding="15dp"
                        android:src="@drawable/rating" />

                    </RelativeLayout>

                </LinearLayout>





            </LinearLayout>

        </ScrollView>





    </RelativeLayout>



</androidx.drawerlayout.widget.DrawerLayout>